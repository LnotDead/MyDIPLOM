@model IEnumerable<WebApplication1.Models.Модели_тренажёров>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>МОДЕЛИ ТРЕНАЖЁРОВ</h3>

<p>
    @Html.ActionLink(WebApplication1.Models.Strings.Create_New, "Create")
</p>
<table class="sort" id="bigTable">
    <thead>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.Начало_SN)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.Тип_тренажёра)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.Название_линейки)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.Название_модели)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.ImageData)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.Примечания)
            </td>

            <td class="td1"> </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Начало_SN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Тип_тренажёра)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Название_линейки)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Название_модели)
                </td>
                <td>
                    <div class="item">
                        @if (item.ImageData != null)
                        {
                            <div style="float: left; margin-right: 20px">
                                @*<img width="75" height="50" src="@Url.Action("GetImage", "Модели_тренажёров", new { item.Начало_SN})" />*@
                                <img height="50" src="@Url.Action("GetImage", "Модели_тренажёров", new { item.Начало_SN})" />
                            </div>
                        }

                    </div>



                    @*@Html.DisplayFor(modelItem => item.ImageData)*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Примечания)
                </td>
                <td class="nav nav-pills td2">
                    @Html.ActionLink(WebApplication1.Models.Strings.Edit, "Edit", new { id = item.Начало_SN }) |
                    @Html.ActionLink(WebApplication1.Models.Strings.details, "Details", new { id = item.Начало_SN }) |
                    @Html.ActionLink(WebApplication1.Models.Strings.Delete, "Delete", new { id = item.Начало_SN })
                </td>
            </tr>
        }
    </tbody>
</table>

<div style="display:none;" class="nav_up" id="nav_up"></div>
<div style="display:none;" class="nav_down" id="nav_down"></div>
