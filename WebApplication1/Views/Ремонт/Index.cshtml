@model IEnumerable<WebApplication1.Models.Ремонт>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>РЕМОНТЫ ТРЕНАЖЁРОВ</h3>

<p>
    @Html.ActionLink(WebApplication1.Models.Strings.Create_New, "Create")
</p>

<table class="sort" id="bigTable">
    <thead>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.SN)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.Сотрудники.ФИО_сотрудника)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.Начало)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.Завершение)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.Примечания)
            </td>

            <td class="td1"> </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Сотрудники.ФИО_сотрудника)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Начало)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Завершение)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Примечания)
                </td>
                <td class="nav nav-pills td2">
                    @Html.ActionLink(WebApplication1.Models.Strings.Edit, "Edit", new { id = item.ID_ремонта }) |
                    @Html.ActionLink(WebApplication1.Models.Strings.details, "Details", new { id = item.ID_ремонта }) |
                    @Html.ActionLink(WebApplication1.Models.Strings.Delete, "Delete", new { id = item.ID_ремонта })
                </td>
            </tr>
        }
    </tbody>
</table>

<div style="display:none;" class="nav_up" id="nav_up"></div>
<div style="display:none;" class="nav_down" id="nav_down"></div>